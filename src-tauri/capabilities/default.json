{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "store:default",
    "fs:default",
    "dialog:default",
    {
      "identifier": "fs:allow-appdata-read-recursive",
      "allow": [{"path": "$APPDATA/**"}]
    },
    {
      "identifier": "fs:allow-appdata-write-recursive",
      "allow": [{"path": "$APPDATA/**"}]
    },
    {
      "identifier": "fs:allow-appdata-meta-recursive",
      "allow": [{"path": "$APPDATA/**"}]
    },
    "fs:allow-exists",
    "fs:allow-create",
    "fs:allow-open",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "fs:allow-stat",
    "fs:allow-lstat",
    "fs:allow-fstat",
    "fs:allow-truncate",
    "fs:allow-ftruncate"
  ]
}
